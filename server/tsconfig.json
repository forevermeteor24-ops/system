{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "./src",
    "outDir": "./dist",

    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": "./src",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "types": ["node"],
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
